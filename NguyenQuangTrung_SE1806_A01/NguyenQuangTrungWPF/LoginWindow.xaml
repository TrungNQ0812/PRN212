<Window x:Class="NguyenQuangTrungWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenQuangTrungWPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid Background="DarkCyan">
        <Label Content="Email:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="226,121,0,0" FontSize="20"/>
        <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="327,125,0,0" Width="218" FontSize="20"/>
        <Label Content="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="212,170,0,0" FontSize="20"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="327,178,0,0" Width="218" FontSize="20"/>
        <Button Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="327,242,0,0" Width="100" Click="LoginButton_Click" FontSize="20"/>
        <Button Content="Reset" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="445,242,0,0" Width="100" Click="ResetButton_Click" FontSize="20"/>

    </Grid>
</Window>
